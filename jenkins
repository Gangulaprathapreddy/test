pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/PT-MOURITECH/JMeter_RepositoryV1.git'
            }
        }
        stage('Run JMeter Test') {
            steps {
                script {
                    bat '"C:\\apache-jmeter-5.6.3\\bin\\jmeter" -n -t "C:\\apache-jmeter-5.6.3\\bin\\JPetStore.jmx" -l "results.jtl"'
                }
            }
        }
    }
    post {
        always {
            archiveArtifacts 'results.jtl'
        }
    }
}
